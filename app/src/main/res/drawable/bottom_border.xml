<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Replace with your desired background color -->
        </shape>
    </item>
    <!-- Bottom border -->
    <item android:top="-2dp" android:right="-2dp" android:left="-2dp">
        <shape android:shape="rectangle">
            <stroke android:width="0.8dp" android:color="#DEDEDE"/> <!-- Replace with your desired border color -->
        </shape>
    </item>

</layer-list>