<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".screens.user.ChangePasswordScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/primaryColor">
        <ImageButton
            android:id="@+id/ChangePassword_btnPrevious"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_arrow_left_white_30"
            android:background="@color/transparent"/>
        <TextView
            android:id="@+id/Profile_tvDisplayName"
            android:layout_width="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content"
            android:text="Đổi mật khẩu"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:textSize="20dp"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/ChangePassword_btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:text="Lưu"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Mật khẩu cũ"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"
            android:textSize="13dp"/>
        <EditText
            android:id="@+id/ChangePassword_edtOldPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginBottom="12dp"
            android:padding="4dp"
            android:background="@drawable/edt_background" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Mật khẩu mới"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"
            android:textSize="13dp"/>
        <EditText
            android:id="@+id/ChangePassword_edtNewPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginBottom="12dp"
            android:padding="4dp"
            android:background="@drawable/edt_background" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Nhập lại mật khẩu mới"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"
            android:textSize="13dp"/>
        <EditText
            android:id="@+id/ChangePassword_edtRetype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginBottom="12dp"
            android:padding="4dp"
            android:background="@drawable/edt_background" />

    </LinearLayout>
</LinearLayout>