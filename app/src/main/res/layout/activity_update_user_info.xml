<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".screens.user.UpdateUserInfo">

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/primaryColor">
        <ImageButton
            android:id="@+id/UpdateInfo_btnPrevious"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_arrow_left_white_30"
            android:background="@color/transparent"/>
        <TextView
            android:id="@+id/Profile_tvDisplayName"
            android:layout_width="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content"
            android:text="Cập nhật thông tin"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:textSize="20dp"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/UpdateInfo_btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:text="Lưu"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/UpdateInfo_flChooseImg"
            android:layout_width="80dp"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/UpdateInfo_ivAvatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/avatar"/>
            <ImageView
                android:id="@+id/UpdateInfo_ivBlur"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/camera_black_30"/>
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Tên hiển thị"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"
            android:textSize="13dp"/>
        <EditText
            android:id="@+id/UpdateInfo_edtDisplayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginBottom="12dp"
            android:padding="4dp"
            android:background="@drawable/edt_background" />
    </LinearLayout>
</LinearLayout>