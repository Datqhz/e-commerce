<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.authenticate.register.merchandiser.GetCCCDImg">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/register" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:gravity="right"
        android:layout_marginRight="26dp"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/shop_logo_nonbackground"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryColor"
            android:fontFamily="@font/roboto_medium"
            android:textSize="34dp"
            android:text="Thông tin CCCD"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tvPrevious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="84dp"
        android:layout_marginLeft="22dp"
        android:text="Trở về"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp">
        <FrameLayout
            android:id="@+id/flFront"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dot_border"
            android:layout_marginHorizontal="40dp">
            <ImageView
                android:id="@+id/ivFront"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginHorizontal="120dp"
                android:scaleType="fitCenter"
                android:src="@drawable/image"
                android:contentDescription="Mặt trước" />

            <ImageButton

                android:id="@+id/btnRemoveFront"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="top|right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12dp"
                android:padding="5dp"
                android:background="@drawable/rectangle_button"
                android:src="@drawable/baseline_close_white_18"/>
            <TextView
                android:id="@+id/tvFront"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Mặt trước"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/flBehind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dot_border"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="12dp">
            <ImageView
                android:id="@+id/ivBehind"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginHorizontal="120dp"
                android:scaleType="fitCenter"
                android:src="@drawable/image"
                android:contentDescription="Mặt sau" />

            <ImageButton
                android:id="@+id/btnRemoveBehind"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12dp"
                android:padding="5dp"
                android:background="@drawable/rectangle_button"
                android:src="@drawable/baseline_close_white_18"/>
            <TextView
                android:id="@+id/tvBehind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Mặt sau"/>
        </FrameLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btnRegisterShop"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_button"
        app:backgroundTint="@color/primaryColor"
        android:text="Đăng ký"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/primaryColor"
        />

</RelativeLayout>