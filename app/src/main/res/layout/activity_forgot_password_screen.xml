<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".screens.authenticate.ForgotPasswordScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/primaryColor">
        <ImageButton
            android:id="@+id/ForgotPassword_btnPrevious"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow_left_white_30"
            android:background="@color/transparent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/white"
            android:text="Quên mật khẩu"/>
    </LinearLayout>
    <EditText
        android:layout_marginTop="100dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:elevation="8dp"
        android:hint="Email/Số điện thoại"
        android:id="@+id/ForgotPassword_edtUsername"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        android:background="@drawable/edit_text_border"
        />
    <Button
        android:id="@+id/ForgotPassword_btnOK"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/login_button"
        app:backgroundTint="@color/primaryColor"
        android:text="Xác nhận"/>
</LinearLayout>